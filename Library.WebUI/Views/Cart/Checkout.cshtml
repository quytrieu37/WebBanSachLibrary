@model Library.WebUI.Models.CartCheckoutViewModel
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="border-bottom">
    <h3>Vui lòng điền thông tin mua hàng</h3>
</div>
<div class="row">
    <div class="col-12 col-md-8 ml-5">
        @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, new { }))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(x => x.FullName)
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                <p class="text-danger">@Html.ValidationMessageFor(x => x.FullName)</p>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Address)
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                <p class="text-danger">@Html.ValidationMessageFor(x => x.Address)</p>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                <p class="text-danger">@Html.ValidationMessageFor(x => x.Email)</p>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Phone)
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                <p class="text-danger">@Html.ValidationMessageFor(x => x.Phone)</p>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.PaymentMethod)
                @Html.DropDownListFor(x => x.PaymentMethod, new SelectList(ViewBag.PaymentMethods, "PaymentId", "PaymentName"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Note)
                @Html.TextAreaFor(x => x.Note, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.UserShipper)
                @Html.CheckBoxFor(x => x.UserShipper, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Đặt hàng</button>
        }
    </div>
    <div class="col-12 col-md-4">

    </div>
</div>


@section js{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}