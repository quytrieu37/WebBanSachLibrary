@model Library.WebUI.Models.AccountLoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="border-bottom">
    <h3>Đăng nhập</h3>
</div>
<div class="row">
    <div class="col-12 col-md-8">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(x => x.UserName)
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                <p class="text-danger">@Html.ValidationMessageFor(x => x.UserName)</p>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type="password" })
                <p class="text-danger">@Html.ValidationMessageFor(x => x.Password)</p>
            </div>
            <button type="submit" class="btn btn-outline-primary">Đăng nhập</button>
        }
    </div>
    <div class="col-12 col-md-4 pt-5">
        <a href="@Url.Action("Register","Account")" class="btn btn-outline-primary">Đăng kí tài khoản</a>
        <a href="#" class="btn btn-outline-info">Quên mật khẩu?</a>
    </div>
</div>
@section js {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}