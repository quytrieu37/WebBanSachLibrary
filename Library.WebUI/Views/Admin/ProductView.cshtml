@model Library.Domain.Entities.Product
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div>
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm: <!--label-->
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)<!--value-->
        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            Đơn giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            Tác Giả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="@Model.ProductImage" height="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.Raw(Model.Description)<!--show nội dung html-->
        </dd>

    </dl>
</div>
<p>
</p>